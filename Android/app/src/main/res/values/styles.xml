<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorPrimaryVariant">@color/primaryLightColor</item>
        <item name="colorOnPrimary">@color/secondaryTextColor</item>
        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorSecondaryVariant">@color/secondaryDarkColor</item>
        <item name="colorOnSecondary">@color/secondaryTextColor</item>

        <item name="android:fontFamily">@font/roboto</item>
        <item name="fontFamily">@font/roboto</item>

        <item name="android:textColorPrimary">@color/primaryTextColor</item>

        <item name="md_corner_radius">16dp</item>
    </style>

    <style name="TextAppearance.ListItem.Primary" parent="TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/roboto_medium</item>
        <item name="fontFamily">@font/roboto_medium</item>

        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/primaryTextColor</item>
    </style>

    <style name="TextAppearance.ListItem.Secondary" parent="TextAppearance.AppCompat">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/primaryDimTextColor</item>
    </style>

    <style name="TextAppearance.ListItem.Meta" parent="TextAppearance.AppCompat">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/primaryDimTextColor</item>
    </style>

    <!-- Default Material Style -->
    <style name="Widget.MaterialComponents.TextInputLayout.Regular" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="boxBackgroundColor">@android:color/transparent</item>
    </style>

    <style name="Widget.MaterialComponents.TextInputEditText.FilledBox"
        parent="Base.Widget.MaterialComponents.TextInputEditText"
        tools:override="true">

        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingEnd">0dp</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>

        <item name="android:paddingTop">28dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>

    <style name="Widget.MaterialComponents.TextInputLayout.Regular.ExposedDropdownMenu" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu">
        <item name="boxBackgroundColor">@android:color/transparent</item>
    </style>

    <style name="Widget.MaterialComponents.AutoCompleteTextView.FilledBox"
        parent="Base.Widget.MaterialComponents.AutoCompleteTextView"
        tools:override="true">

        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingEnd">0dp</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>

        <item name="android:paddingTop">28dp</item>
        <item name="android:paddingBottom">8dp</item>
    </style>

    <style name="Widget.MaterialComponents"
        parent="Widget.MaterialComponents.Button"
        tools:override="true">

    </style>
</resources>

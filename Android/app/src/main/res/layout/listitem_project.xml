<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="project"
            type="com.quickdev.projectdashboard.models.domain.Project" />

        <variable
            name="clickListener"
            type="com.quickdev.projectdashboard.viewmodels.adapters.ProjectItemClickListener" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:background="?attr/selectableItemBackground"
        android:onClick="@{() -> clickListener.onClick(project)}"
        android:orientation="vertical"
        android:padding="@dimen/padding_medium">

        <ImageView
            android:id="@+id/img_reservatie_bike"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@{project.team.length() > 1 ? @drawable/ic_group : @drawable/ic_person}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/ic_person"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/txt_reservatie_datum"
            style="@style/TextAppearance.ListItem.Primary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/padding_large"
            app:date="@{project.name}"
            app:layout_constraintBottom_toTopOf="@id/txt_reservatie_tijd"
            app:layout_constraintStart_toEndOf="@+id/img_reservatie_bike"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Solo Project" />

        <TextView
            android:id="@+id/txt_reservatie_tijd"
            style="@style/TextAppearance.ListItem.Secondary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text='@{String.format(@string/label_tasks, project.tasks.length())}'
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/txt_reservatie_datum"
            app:layout_constraintTop_toBottomOf="@id/txt_reservatie_datum"
            tools:text="1 Open Task(s)"/>

        <TextView
            android:id="@+id/txt_reservatie_fietsId"
            style="@style/TextAppearance.ListItem.Meta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text='@{String.format(@string/label_tasks, project.team.length())}'
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="1 Member(s)"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>